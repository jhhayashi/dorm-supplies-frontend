@require "helpers"

mobile-width = 600px
text-color = black

*
    box-sizing border-box
html, body
    height 100%
    margin 0
    padding 0
    color text-color

.quiet-link, .quiet-link:visited, .quiet-link:active
    color text-color
    text-decoration none
.right
    text-align right
.left
    text-align left
.center
    text-align center

#navbar
    background-color #ddd
.navbar-item-wrap
    margin 0 auto
    max-width 1080px
.navbar-item
    display block
    padding 1rem
    text-align center
.navbar-item:hover
    cursor pointer
@media only screen and (min-width: mobile-width)
    .navbar-item
        display inline-block
        
.form
    width 90%
    max-width 600px
    margin 0 auto
.form-title
    width 100%
    margin 0
    padding-top 1rem
    text-align center
.form-input
    display block
    width 100%
    margin-bottom 10px
    padding 5px
    border-radius 5px
    border default-border
    font-size 18px
    line-height 2rem

.half
    display block
    width 100%
@media only screen and (min-width: mobile-width)
    .half
        display inline-block
        width 50%

.hidden
    display none

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border default-border
    background-color white
    border-radius 5px
    text-align center
